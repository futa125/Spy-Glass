<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SpyGlass" parent="Theme.MaterialComponents.Light">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spyglass_blue</item>
        <item name="colorPrimaryVariant">@color/spyglass_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spyglass_gold</item>
        <item name="colorSecondaryVariant">@color/spyglass_gold</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Set colors for action bar -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TextInputEditTextStyleLogin">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/spyglass_blue</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="TextInputEditTextStyleReview">
        <item name="android:textColor">@color/spyglass_blue</item>
        <item name="extraMultilineHeightEnabled">true</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextInputLayoutStyleLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/spyglass_blue</item>
        <item name="boxStrokeColor">@drawable/stroke_color_selector</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/error_red</item>
        <item name="hintTextColor">@color/spyglass_gold</item>
    </style>

    <style name="TextInputLayoutMenuRegister" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/spyglass_blue</item>
        <item name="boxStrokeColor">@drawable/stroke_color_selector</item>
        <item name="hintTextColor">@color/spyglass_gold</item>

    </style>

    <style name="TextInputLayoutStyleLoginPassword" parent="TextInputLayoutStyleLogin">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/spyglass_blue</item>
    </style>

    <style name="StyleButton">
        <item name="android:textColor">@color/spyglass_blue</item>
        <item name="backgroundTint">@drawable/button_background_color_selector</item>
        <item name="android:insetTop">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/spyglass_blue</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">32dp</item>
    </style>


